<section class="panel panel-default">
    <div class="panel-heading">
        <h4 class="text-center">Edit a car</h4>
    </div>

    <div class="panel-body">
        <form action="/cars/{{car._id}}" method="post">
            <input type="hidden" value="PUT" name="_method"/>

            <div class="form-group">
                <input class="form-control" type="text" name="driver_name" placeholder="Driver name" value="{{car.driver_name}}"/>
            </div>

            <div class="form-group">
                <input class="form-control" type="text" name="license_plate" placeholder="License plate" value="{{car.license_plate}}"/>
            </div>

            <div class="form-group">
                <select name="status" class="form-control" id="">
                    {{#equals car.status 'IN'}}
                        <option value="IN" selected>Inside</option>
                        <option value="OUT">Outside</option>
                        <option value="-1">Choose a option</option>
                    {{/equals}}
                    {{#equals car.status 'OUT'}}
                        <option value="OUT" selected>Outside</option>
                        <option value="IN">Inside</option>
                        <option value="-1">Choose a option</option>
                    {{/equals}}
                </select>
            </div>

            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Edit"/>
            </div>
        </form>

    </div>
</section>